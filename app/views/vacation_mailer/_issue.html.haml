%h1= link_to(h("#{issue.tracker.name} ##{issue.id}: #{issue.subject}"), issue_url)

%ul
  %li
    =l(:field_author)+":" 
    =h issue.author
  %li
    =l(:field_status)+":"
    =h issue.status
  %li
    =l(:field_priority)+":"
    =h issue.priority
  %li
    =l(:field_assigned_to)+":"
    =h issue.assigned_to
  %li
    =l(:field_category)+":"
    =h issue.category
  %li
    =l(:field_fixed_version)+":"
    =h issue.fixed_version
  - issue.custom_field_values.each do |c|
    %li
      =h(c.custom_field.name)+":"
      =h show_value(c)

= textilizable(issue, :description, :only_path => false)
