.contextual
  = link_to l(:label_vacation_range_new), new_vacation_range_path, :class => 'icon icon-add'

%h2=l(:label_vacation_range_plural)

%table.list
  %thead
    %tr
      %th=l(:field_user)
      %th=l(:field_vacation_status)
      %th=l(:field_vacation_start_date)
      %th=l(:field_vacation_end_date)     
      %th
  %tbody
    - for vacation_range in @vacation_ranges
      %tr{:class=>cycle("odd", "even")}
        %td= h(vacation_range.user)
        %td= link_to h(vacation_range.vacation_status.name), vacation_status_path(vacation_range.vacation_status)
        %td{:align=>"center"}= format_date(vacation_range.start_date)
        %td{:align=>"center"}= format_date(vacation_range.end_date)
        %td.buttons
          = link_to l(:button_update), {:action => 'edit', :id => vacation_range.id}, :class => 'icon icon-edit'
          = link_to(l(:button_delete), vacation_range_path(vacation_range), :method => :delete, :confirm => l(:text_are_you_sure), :class => 'icon icon-del')

%p.pagination= pagination_links_full @vacation_range_pages

- html_title(l(:label_vacation_range_plural))
