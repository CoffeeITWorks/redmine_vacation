.splitcontentleft
  - if @vacation_managers.any?
    %table.list.users
      %thead
        %tr
          %th= l(:label_user)
          %th{:style=>"width:15%"}
      %tbody
        - @vacation_managers.sort_by{ |m| m.user }.each do |manager|
          %tr{:id=>"user-#{manager.user_id}", :class => cycle('odd', 'even')}
            %td.user
              = link_to_user manager.user
            %td.buttons
              = link_to l(:button_delete), vacation_manager_path(manager), :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del'
  - else
    %p.nodata
      = l(:label_no_data)

.splitcontentright
  #tab-content-users
    - users = User.not_vacation_manager.all
    - if users.any?
      - form_for :vacation_manager do |f|
        %fieldset
          %legend
            =l(:label_user_new)
          #users
            = principals_check_box_tags 'user_ids[]', users

          %p= submit_tag l(:button_add)  

